{% extends 'base.html.twig' %}

{% block title %}About {{book.title}}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10" style="margin-top: 25px;">
            <div class="card">
                <h1 style="text-align: center">{{ book.title }}</h1>
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            {# <img src="{{ asset('build/images/sale.png') }}" class="card-img-top" alt="SALE IMAGE" style="width: 100%"> #}
                        </div>
                        <div class="col-8">
                            <p>{{ book.description}}</p>
                            </br>
                            <h4>Release date : {{ book.releaseDate|date('d/m/Y') }}</h4>
                            </br>
                            <p>Ecrit par {% for author in book.getAuthors() %}
                                    {{ author.firstname }} {{ author.lastname }}
                                {% endfor %}
                            </p>
                        </div>
                    </div>
                    </br>
                    <div class="row">
                        <div class="col-8">
                            <p> Etat : 
                                {% if annonce.updatedAt is defined and annonce.updatedAt is not empty %}
                                    {{ book.status }} à la date {{ book.updatedAt|date('d/m/Y H:m')}} 
                                {% else %} 
                                    {{ book.status }} à la date {{ book.createdAt|date('d/m/Y H:m')}} 
                                {% endif %}
                                </p>
                        </div>
                        <div class="col-4">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') and annonce.AnnonceByUser.getId() == app.user.id %}
                            <a href="{{ path('edit_annonce', { id: annonce.id }) }}" class="btn btn-success">Modifier</a>
                            <a href="{{ path('delete_annonce', { id: annonce.id }) }}"  class="btn btn-danger">Supprimer</a>
                        {% endif %}
                        </div>
                    </div>   
                </div>
            </div>
        </div>
        <div class="col-1"></div>
    </div>
</div>
{% endblock %}